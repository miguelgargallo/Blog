---
import Tag from "../components/Tag.astro";
import Ga from "../components/Ga.astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    author?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, author, heroImage },
} = Astro.props;
---

<html lang="en">
  <head>
    <Tag />
    <!-- Link th shortcuts.js
    <script src="../pages/shortcuts.js"></script>  -->
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Ga />
    <Header />
    <main>
      <article>
        <h1 class="title">{title}</h1>
        <img
          width={720}
          height={360}
          src="https://pbs.twimg.com/profile_banners/243357335/1657965074/1500x500"
          alt="miguel gargallo on a stage with Pencil keynote"
        />

        {pubDate && <time>{pubDate}</time>}
        {
          updatedDate && (
            <>
              <div>
                Last updated on <time>{updatedDate}</time>
              </div>
              <p>{author}</p>
            </>
          )
        }
        <hr />
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
