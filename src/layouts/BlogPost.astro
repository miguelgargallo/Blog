---
import Tag from "../components/Tag.astro";
import Ga from "../components/Ga.astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    author?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, author, heroImage },
} = Astro.props;
---

<html lang="en">
  <head>
    <Tag />
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Ga />
    <Header />
    <main>
      <article>
        {
          heroImage && (
            <img
              width={720}
              height={360}
              src="/public/placeholder-hero.jpg"
              alt="miguel gargallo on a stage with Pencil keynote"
            />
          )
        }

        <h1 class="title">{title}</h1>
        {
          pubDate && (
            <time>
              <div>Published on {pubDate}</div>{" "}
            </time>
          )
        }
        {
          updatedDate && (
            <>
              <div>
                Last updated on <time>{updatedDate}</time>
              </div>
              <p>Author: {author}</p>
            </>
          )
        }
        <hr />
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
