<!-- Astro Component of keyboard shortcuts to move between pages, "/", /blog and /about -->
<script>
  (function () {
    function handleKeydown(e: { key: string; shiftKey: any }) {
      if (e.key === "1") {
        window.location.href = "/";
      } else if (e.key === "2") {
        window.location.href = "/blog";
      } else if (e.key === "3") {
        window.location.href = "/about";
      } else if (e.key === "4") {
        window.location.href = "https://twitter.com/miguelgargallo";
      } else if (e.key === "5") {
        window.location.href = "https://github.miguelgargallo.es";
      } else if (e.key === "6") {
        window.location.href = "https://twitch.miguelgargallo.es";
      } else if (e.key === "7") {
        window.location.href = "https://youtube.miguelgargallo.es";
      } else if (e.key === "8") {
        window.location.href = "https://ig.miguelgargallo.es";
      } else if (e.key === "h") {
        window.location.href = "/help";
      }
    }
    document.addEventListener("keydown", handleKeydown);
  })();
</script>
