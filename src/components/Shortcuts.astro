<script>
  const SHORTCUTS = {
    q: "/",
    1: "/",
    2: "/blog",
    3: "/about",
    4: "https://twitter.com/miguelgargallo",
    5: "https://github.miguelgargallo.es",
    6: "https://twitch.miguelgargallo.es",
    7: "https://youtube.miguelgargallo.es",
    8: "https://ig.miguelgargallo.es",
  };

  function handleKeydown(event: { key: string }) {
    if (event.key === "h") {
      alert(
        "You tapped for help. Here's a list of keyboard shortcuts: 1: Home, 2: Blog, 3: About, 4: Twitter, 5: GitHub, 6: Twitch, 7: YouTube, 8: Instagram"
      );
      return;
    }

    const shortcut = SHORTCUTS[event.key];
    if (shortcut) {
      window.location.href = shortcut;
    }
  }

  document.addEventListener("keydown", handleKeydown);
</script>
